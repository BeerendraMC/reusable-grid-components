{
  "name": "reusable-grid-components",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "prettier": "prettier --write \"**/*.{js,json,css,scss,less,md,ts,html,component.html}\"",
    "server": "ts-node -P ./server/server.tsconfig.json ./server/server.ts",
    "start": "npm run start:custom-data-grid",
    "start:custom-data-grid": "concurrently \"json-server ./projects/custom-data-grid/employeesData.json\" \"ng serve custom-data-grid -o\"",
    "start:grid-for-server-side-interactions": "concurrently \"npm run server\" \"ng serve grid-for-server-side-interactions --proxy-config ./proxy.json --port 4300 -o\"",
    "build:custom-data-grid": "ng build custom-data-grid --prod --output-hashing none && node build-elements.js custom-data-grid",
    "build:elements": "npm run build:custom-data-grid",
    "test:custom-data-grid": "ng test custom-data-grid",
    "test:grid-for-server-side-interactions": "ng test grid-for-server-side-interactions",
    "lint": "ng lint",
    "e2e": "ng e2e"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~11.0.4",
    "@angular/cdk": "^11.2.10",
    "@angular/common": "~11.0.4",
    "@angular/compiler": "~11.0.4",
    "@angular/core": "~11.0.4",
    "@angular/elements": "^11.0.9",
    "@angular/forms": "~11.0.4",
    "@angular/material": "^11.2.10",
    "@angular/platform-browser": "~11.0.4",
    "@angular/platform-browser-dynamic": "~11.0.4",
    "@angular/router": "~11.0.4",
    "document-register-element": "^1.7.2",
    "express": "^4.17.1",
    "rxjs": "~6.6.0",
    "tslib": "^2.0.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.1100.7",
    "@angular/cli": "~11.0.4",
    "@angular/compiler-cli": "~11.0.4",
    "@types/express": "^4.17.11",
    "@types/jasmine": "~3.6.0",
    "@types/node": "^12.11.1",
    "codelyzer": "^6.0.0",
    "concat": "^1.0.3",
    "concurrently": "^6.0.2",
    "fs-extra": "^9.1.0",
    "husky": "^6.0.0",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~5.0.0",
    "json-server": "^0.16.3",
    "karma": "~5.1.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "protractor": "~7.0.0",
    "replace-in-file": "^6.2.0",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "~4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,scss,less,md,ts,html,component.html}": [
      "prettier --write"
    ]
  }
}
